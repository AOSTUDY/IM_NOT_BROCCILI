<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="local"
            type="com.yujeong.aostudy.broccoli.ui.home.model.DomesticData" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_domestic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_margin="0dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="160dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <!-- simple image view -->
            <ImageView
                setSrc="@{local.imgId}"
                android:id="@+id/iv_home_domestic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/home_deal_ad1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_home_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{local.name}"
            tools:text="제주도"
            app:layout_constraintEnd_toEndOf="@+id/cv_home_domestic"
            app:layout_constraintStart_toStartOf="@+id/cv_home_domestic"
            app:layout_constraintTop_toBottomOf="@+id/cv_home_domestic" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>